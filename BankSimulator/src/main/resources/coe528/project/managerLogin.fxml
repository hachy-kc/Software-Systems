<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="coe528.project.ManagerLoginController">
   <children>
      <Label text="Manager Login" />
       <TextField fx:id="usernameBox" maxWidth = "150" promptText="Enter Username" />
       <PasswordField fx:id="passwordBox" maxWidth = "150" promptText="Enter Password" />
       <Button fx:id = "login" text = "Login" onAction ="#checkPassword" /> 
       <Label fx:id = "errorMessage" textFill = "red"/>
       <Button fx:id="goBack" text = "Back to main menu" onAction="#mainScreen"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
